<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="login.css">
    <title>Regsiter</title>
</head>

<body>
    <script>
        function alertJS() {
            var alertMsg = document.getElementById("alertMsg");
            setTimeout(function () { alertMsg.classList.add("fadeOutAlert") }, 3000);
        };
    </script>
    <!-- navbar -->
    <section id="navbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Lets Buy Shoes</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item ">
                        <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About Us</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Products
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item " href="/product/male">Men</a>
                            <a class="dropdown-item" href="/product/female">Women</a>
                            <a class="dropdown-item disabled" href="#">Unisex</a>

                        </div>
                    </li>

                </ul>
                <ul class="navbar-nav">


                    <li class="nav-item ">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/register">Sign Up</a>
                    </li>


                </ul>
            </div>
        </nav>

    </section>


    <div id="alertMsg" class="container-fluid my-0 py-0 px-0 mx-0 my-0 ">
        <!-- Checking error -->
        <% if(error && error.length > 0){ %>
        <script>
            alertJS();
        </script>
        <div class="alert alert-danger text-center my-0 py-2" role="alert">
            <%= error %>
        </div>
        <% } %>
        <!-- Checking Success -->
        <% if(success && success.length > 0){ %>
        <script>
            alertJS();
        </script>
        <div class="alert alert-success text-center  my-0 py-2" role="alert">
            <%= success %>
        </div>
        <% } %>
    </div>

    <section id="header">
        <div class="container-fluid px-0">
            <p class="text-center py-3">Register here</p>
        </div>
    </section>

    <section id="formSection">
        <div class="container pb-5">

            <form action="/register" method="POST">
                <div class="row d-flex justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" name="username" placeholder="Enter your name"
                                required>
                        </div>

                        <div class="form-group">
                            <label>Shipping Address</label>
                            <input type="text" class="form-control" name="address" placeholder="Enter your address"
                                required>
                            <small class="form-text text-muted">Where the product would be delivered.</small>
                        </div>

                        <div class="form-group">
                            <label>Phone Number</label>
                            <input id="uid" class="form-control" name="phone" pattern="[0-9]{11}"
                                placeholder="Enter your phone number" title="Enter Your 11 Digit Mobile Number"
                                required>
                        </div>

                        <div class="form-group">
                            <label>Email address</label>
                            <input type="email" class="form-control" name="email" placeholder="Enter email" required>

                        </div>
                        <div class="form-group">
                            <label>Age</label>
                            <input type="number" class="form-control" name="age" placeholder="Enter your age" min="5"
                                max="100" required>
                        </div>
                    </div>
                </div>

                <!-- <div class="row d-flex justify-content-center">
                    <div class=" form-group col-6 col-md-4 col-lg-3">
                        <label for="inputState">Sex</label>
                        <select id="inputState" class="form-control" required>
                            <option selected>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                            <option>Dont want to disclose</option>
                        </select>
                    </div>

                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="form-group">
                            <label>Age</label>
                            <input type="number" class="form-control" name="" placeholder="Enter your age" min="5" max="110"
                                required>
                        </div>
                    </div>
                </div> -->

                <div class="row d-flex justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6">
                        <div class="form-group">
                            <label">Password</label>
                                <input type="password" class="form-control" name="password" placeholder="Password"
                                    required>
                                <small class="form-text text-muted">We'll never share your details with anyone.
                                </small>
                        </div>
                        <button id="submit" type="submit" class="btn">Submit</button>
                        <button type="reset" class="btn btn-danger">Reset</button>
                    </div>

                </div>
            </form>
        </div>
    </section>

    <section id="loginFooter">
        <footer class="footer">
            <div class="card mt-5 ">
                <div class="card-header text-center">
                    LetsBuyShoes.com
                </div>
                <div class="card-body pb-0">
                    <p class="text-center">
                        <a href="https://www.facebook.com/marufmonem.anik" class="contactLinks"><i
                                class="fab fa-facebook-f"></i></a>
                        <a href="https://www.instagram.com/maruf_monem_anik/" class="contactLinks"><i
                                class="fab fa-instagram"></i></a>
                        <a href="https://www.linkedin.com/in/marufmonemanik" class="contactLinks"><i
                                class="fab fa-linkedin-in"></i></a>
                        <a href="mailto: maruf.monem@g.bracu.ac.bd?cc=marufmonem@google.com" class="contactLinks"><i
                                class="far fa-envelope"></i></a>
                        <a href="https://github.com/MarufMonem" class="contactLinks"><i class="fab fa-github"></i></a>
                    </p>
                </div>
            </div>
        </footer>
    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>

</html>