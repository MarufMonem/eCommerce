<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="../productMale.css">
    <title>Products | Male</title>
</head>

<body>
    <!-- navbar -->
    <section id="navbar">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="/">Lets Buy Shoes</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home <span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">About Us</a>
                    </li>
                    <li class="nav-item active dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Products
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item active" href="/products/male">Men</a>
                            <a class="dropdown-item" href="/products/female">Women</a>
                            <a class="dropdown-item disabled" href="#">Unisex</a>

                        </div>
                    </li>

                </ul>
                <!-- All login releated links -->
                <%- include("../views/partials/navbarUserInfo") %>
            </div>
        </nav>
    </section>
    <!-- All alerts -->
    <%- include("../views/partials/alerts") %>

    <!-- Heading -->
    <section id="header">

        <div class="container-fluid">
            <div class="row">
                <div id="headTitle" class="col-12 col-md-6 px-0 d-flex align-items-center justify-content-center">
                    <h1 class="text-center display-3"> Mens Collection</h1>
                </div>

                <div class="col-12 col-md-6 px-0">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">

                            <% 
                                var count=1;
                                maleProducts.forEach(function(product){ 
                                    if(product.featured == true){
                                        if(count==1){  
                            %>
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="<%= product.image[0]%>" alt="First slide">
                            </div>
                            <% 
                                }else{ 
                            %>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="<%= product.image[0]%>" alt="First slide">
                            </div>
                            <%
                                }
                                count++;
                            }
                        }) %>

                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
    </section>



    <!-- header -->
    <section id="header">
        <div class="jumbotron jumbotron-fluid py-4">
            <div class="container">
                <blockquote class="text-center">Men with style are great because they have a sense of self.</blockquote>
                <footer class="blockquote-footer text-right"><cite title="Source Title">Lexa Doig</cite></footer>
            </div>
        </div>
    </section>

    <!-- products -->
    <section id="products">
        <div class="container">
            <div class="row justify-content-center">



                <% maleProducts.forEach(function(product){ %>
                <div class="col-12 col-md-6 col-lg-4 py-2">
                    <div class="card mx-auto" style="width: 18.7rem;">
                        <a href="/products/<%=product._id%>"><img class="card-img-top" src="<%=product.image%>"
                                alt="Card image cap"></a>

                        <div class="card-body">
                            <h5 class="text-center card-title"><%=product.title%></h5>
                            <p class="card-text"><%=product.description.substring(0,100)%>...</p>
                            <h6 class="card-subtitle text-center mb-2"><%=product.price%> Taka</h6>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>
    <!-- Footer information and ending tags and scripts  -->
    <%- include("../views/partials/footer") %>