<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="Description" content="Enter your description here" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
  <link rel="stylesheet" href="../admin.css">
  <title>Login Here</title>
</head>

<body>

  <!-- navbar -->
  <section id="navbar">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="index.html">Pothorekha</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item ">
            <a class="nav-link" href="/">Admin <span class="sr-only"></span></a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="../products/new">Add new product</a>
          </li>
          <li class="nav-item ">
            <a class="nav-link " href="/admin/products">All products</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/admin/users">All Users</a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if(currentUser){ %>
            <li class="nav-item">
              <a class="nav-link" href=""> <strong> <%= currentUser.username.toUpperCase() %> </strong></a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/logout">Log out</a>
          </li>
          <% }%>
        </ul>

        <!-- <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
              </form> -->

      </div>
    </nav>

  </section>

  <section id="header">
    <div class="container-fluid px-0 ">
      <p class="text-center py-3">All Users</p>
    </div>
  </section>

  <section>
    <div class="container">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Serial</th>
              <th scope="col">Name</th>
              <th scope="col">Address</th>
              <th scope="col">Phone Number</th>
              <th scope="col">Email</th>
              <th scope="col">Age</th>
              <th scope="col">Admin</th>
              <th scope="col">Orders</th>
              <th scope="col">Remove</th>
            </tr>
          </thead>
          <tbody>
            <%
            var count=1;
            users.forEach(function(user){
              %>
              <tr>
                <th scope="row"><%=count%></th>
                <td><%=user.username%></td>
                <td><%=user.address%></td>
                <td><%=user.phone%></td>
                <td><%=user.email%></td>
                <td><%=user.age%></td>
                <td><%=user.admin%></td>
                <td><%=user.orders.length%></td>
                <td>
                  <form action="/user/<%=user._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-outline-danger"><i class="fas fa-times"></i></button>
                  </form>
  
                </td>
              </tr>
            <% 
          count++;
          }) 
          %>
            


          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- All the products list -->



  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>

</html>