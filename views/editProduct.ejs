    <section id="header">
        <div class="container-fluid px-0">
            <p class="text-center py-3">Add new product</p>
        </div>
    </section>

    <section id="formSection">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 mb-5">
                    <form action="/products/<%=product._id%>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Title of the product</label>
                            <input type="text" class="form-control" name="product[title]" value="<%=product.title%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Price</label>
                            <input type="text" class="form-control" name="product[price]" value="<%=product.price%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Image</label>
                            <input type="text" class="form-control" name="product[image]" value="<%=product.image%>">
                        </div>

                        <div class="form-group">
                            <label for="inputState">Sex</label>
                            <select name="product[sex]" class="form-control">
                                <option class="selected"><%=product.sex%></option>
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Description</label>
                            <textarea class="form-control" name="product[description]"
                                rows="3"><%=product.description%></textarea>
                        </div>
                        
                    <h3>Size & Amount</h3>

                    <div class="form-group">
                        <label for="inputState">Extra Large</label>
                        <input type="number" class="form-control" name="product[sizeXL]" value="<%= product.sizeXL %>">
                    </div>
                    <div class="form-group">
                        <label for="inputState">Large</label>
                        <input type="number" class="form-control" name="product[sizeLG]" value="<%= product.sizeLG %>">
                    </div>
                    <div class="form-group">
                        <label for="inputState">Medium</label>
                        <input type="number" class="form-control" name="product[sizeMD]" value="<%= product.sizeMD %>">
                    </div>
                    <div class="form-group">
                        <label for="inputState">Small</label>
                        <input type="number" class="form-control" name="product[sizeSM]" value="<%= product.sizeSM %>">
                    </div>

                        <button type="submit" class="btn btn-danger">Submit</button>
                        <button type="reset" class="btn btn-warning">Reset</button>
                    </form>
                </div>
            </div>
        </div>
    </section>




    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.min.js"></script>
