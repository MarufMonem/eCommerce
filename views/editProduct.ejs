<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="../../admin.css">
    <title>Admin | EDIT PRODUCT</title>
</head>

<body>

    <!-- navbar -->
    <section id="navbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="index.html">Pothorekha</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item ">
                        <a class="nav-link" href="/">Admin <span class="sr-only"></span></a>
                    </li>
                   
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Log out</a>
                    </li>
                </ul>
            </div>
        </nav>

    </section>

    <section id="header">
        <div class="container-fluid px-0">
            <p class="text-center py-3">Edit product</p>
        </div>
    </section>

    <section id="formSection">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 mb-5">
                    <form action="/products/<%=product._id%>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Title of the product</label>
                            <input type="text" class="form-control" name="product[title]" value="<%=product.title%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Price</label>
                            <input type="text" class="form-control" name="product[price]" value="<%=product.price%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Image 1</label>
                            <input type="text" class="form-control" name="product[image][0]" value="<%=product.image[0]%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Image 2</label>
                            <input type="text" class="form-control" name="product[image][1]" value="<%=product.image[1]%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Image 3</label>
                            <input type="text" class="form-control" name="product[image][2]" value="<%=product.image[2]%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Image 4</label>
                            <input type="text" class="form-control" name="product[image][3]" value="<%=product.image[3]%>">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Image 5</label>
                            <input type="text" class="form-control" name="product[image][4]" value="<%=product.image[4]%>">
                        </div>

                        <div class="form-group">
                            <label for="inputState">Sex</label>
                            <select name="product[sex]" class="form-control">
                                <option class="selected"><%=product.sex%></option>
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Description</label>
                            <textarea class="form-control" name="product[description]"
                                rows="3"><%=product.description%></textarea>
                        </div>
                        
                    <h3>Size & Amount</h3>

                    <div class="form-group">
                        <label for="inputState">Extra Large</label>
                        <input type="number" class="form-control" name="product[sizeXL]" value="<%= product.sizeXL %>">
                    </div>
                    <div class="form-group">
                        <label for="inputState">Large</label>
                        <input type="number" class="form-control" name="product[sizeLG]" value="<%= product.sizeLG %>">
                    </div>
                    <div class="form-group">
                        <label for="inputState">Medium</label>
                        <input type="number" class="form-control" name="product[sizeMD]" value="<%= product.sizeMD %>">
                    </div>
                    <div class="form-group">
                        <label for="inputState">Small</label>
                        <input type="number" class="form-control" name="product[sizeSM]" value="<%= product.sizeSM %>">
                    </div>

                    <div class="form-group">
                        <label for="inputState">Featured</label>
                        <select name="product[featured]" class="form-control">
                            <option class="selected"><%=product.featured%></option>
                            <option value="true">Yes</option>
                            <option value="false">No</option>
                        </select>
                    </div>

                        <button type="submit" class="btn btn-danger">Submit</button>
                        <button type="reset" class="btn btn-warning">Reset</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <%- include("../views/partials/footer") %>