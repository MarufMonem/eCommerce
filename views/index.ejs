                    </li>

                    <% 
                    }
                        %>
                    <li class="nav-item">
                        <a class="nav-link" href="/user/<%=currentUser._id%>"> <strong>
                                <%= currentUser.username.toUpperCase() %> </strong></a>
                    </li>


                    <li class="nav-item">
                        <a href="/cartItems" type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModalCenter" href="">
                            Your Cart
                        </a>
                     </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Log out</a>
                    </li>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Cart Items </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div>
                                    <% if(currentUser){ 
                                        
                                        if(user.cart != ""){

                                        
                                        %>

                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <th>Item</th>
                                                <th>Size</th>
                                                <th>Quantity</th>
                                                <th>Remove</th>
                                            </tr>
                                           
                                            
                                                
                                                
                                            
                                            <% user.cart.forEach(function(item){ %>
                                                <tr>
                                                    <td><%= item.productName %></td>
                                                    <td><%= item.size %></td>
                                                    <td><%= item.amount %></td>
                                                    <td>
                                                        <form action="/order/cart/<%= item._id%>?_method=DELETE" method="POST">
                                                            <button class="btn btn-outline-danger btn-sm"><i class="fas fa-times"></i></button>
                                                        </form>
                                                    
                                                    </td>
                                                </tr>
                                            <% }) %> 
                                                
                                            
                                        </tbody>

                                    </table>

                                </div>
                                <div class="modal-footer text-center mx-auto">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <form action="/order/cart/confirmed" method="POST">
                                        <button type="submit" class="btn btn-success">Confirm Order</button>
                                    </form>
                                    
                                </div>

                               <% 
                                }else{ %>
                                    <div class="text-center px-3">
                                        <h3>You havent added anything to your cart yet!</h3>
                                        <p>Pick your favourite item and click add to cart!</p>
                                    </div>
                                    
                                <% }
                            
                            } %>
                                
                            </div>
                        </div>
                    </div>

                    <% } %>

